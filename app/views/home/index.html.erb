<div class="home-container">
  <!-- Welcome Section -->
  <section class="welcome-section bg-gradient py-5 mb-5">
    <div class="container">
      <div class="row align-items-center">
        <div class="col-lg-8">
          <h1 class="display-4 fw-bold text-white mb-3">Welcome back, <%= current_user&.first_name %>!</h1>
          <p class="lead text-white-50 mb-4">Manage your events and find the perfect gifts all in one place</p>
          <div class="button-group">
            <%= link_to "Create Event", new_event_path, class: "btn btn-outline-solid btn-lg me-2" %>
            <%= link_to "Browse Contacts", contacts_path, class: "btn btn-outline-solid btn-lg" %>
          </div>
        </div>
        <div class="col-lg-4 text-center">
          <div class="welcome-icon">
            <i class="bi bi-gift-fill text-white" style="font-size: 5rem;"></i>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Main Content Grid -->
  <div class="container">
    <div class="row g-4 mb-5">
      <!-- Upcoming Events Section -->
      <div class="col-lg-8">
        <div class="card shadow-sm border-0">
          <div class="card-header bg-primary text-white" style="cursor: pointer;" data-bs-toggle="collapse" data-bs-target="#upcomingEventsCollapse">
            <h2 class="mb-0">
              <i class="bi bi-calendar-event"></i> Upcoming Events
              <i class="bi bi-chevron-down float-end"></i>
            </h2>
          </div>
          <div class="collapse show" id="upcomingEventsCollapse">
            <div class="card-body">
              <%= render 'upcoming_events', upcoming_events: @upcoming_events %>
            </div>
          </div>
        </div>
      </div>

      <!-- Wish List Section -->
      <div class="col-lg-4">
        <div class="card shadow-sm border-0">
          <div class="card-header bg-warning text-dark" style="cursor: pointer;" data-bs-toggle="collapse" data-bs-target="#wishListCollapse">
            <h2 class="mb-0">
              <i class="bi bi-star-fill"></i> Your Wish List
              <i class="bi bi-chevron-down float-end"></i>
            </h2>
          </div>
          <div class="collapse show" id="wishListCollapse">
            <div class="card-body">
              <% if @wish_list_items&.any? %>
                <div class="wish-list">
                  <% @wish_list_items.each do |item| %>
                    <div class="wish-list-item mb-3 pb-3 border-bottom">
                      <h6 class="text-white mb-1"><%= item.name %></h6>
                      <% if item.description.present? %>
                        <p class="text-white-50 small mb-2"><%= truncate(item.description, length: 60) %></p>
                      <% end %>
                    </div>
                  <% end %>
                  <div class="mt-3">
                    <%= link_to "View Full Wish List", wish_list_items_path, class: "btn btn-warning btn-sm w-100" %>
                  </div>
                </div>
              <% else %>
                <div class="text-center py-5">
                  <p class="text-white-50 mt-3">No items on your wish list yet</p>
                  <%= link_to "Add Items", new_wish_list_item_path, class: "btn btn-warning btn-sm mt-2" %>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Quick Gift Generator Section -->
    <div class="row mb-5">
      <div class="col-12">
        <div class="card shadow-sm border-0">
          <div class="card-header bg-success text-white" style="cursor: pointer;" data-bs-toggle="collapse" data-bs-target="#giftGeneratorCollapse">
            <h2 class="mb-0">
              <i class="bi bi-lightbulb"></i> Gift Idea Generator
              <i class="bi bi-chevron-down float-end"></i>
            </h2>
          </div>
          <div class="collapse show" id="giftGeneratorCollapse">
            <div class="card-body">
              <%= render 'quick_gift_generator' %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
