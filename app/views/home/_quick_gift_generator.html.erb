<div class="quick-gift-generator">
  <!-- Generate Gift Ideas (Accordion) -->
  <div class="accordion" id="giftAccordion">
    <div class="accordion-item border-0">
      <div id="generateGiftSection" class="accordion-collapse collapse show" data-bs-parent="#giftAccordion">
        <div class="accordion-body">
          <p class="text-white mb-4">Tell us as few or many things about the recipient, and we'll suggest some gift ideas for them!</p>
          
          <form id="quick-gift-form">
            <div class="row g-3 mb-3">
              <div class="col-md-6">
                <label for="likes" class="form-label">What do they like?</label>
                <input type="text" id="likes" name="likes" placeholder="e.g., reading, cooking, travel" class="form-control">
              </div>
              
              <div class="col-md-6">
                <label for="dislikes" class="form-label">What do they dislike?</label>
                <input type="text" id="dislikes" name="dislikes" placeholder="e.g., sports, video games" class="form-control">
              </div>
            </div>
            
            <div class="row g-3 mb-3">
              <div class="col-md-6">
                <label for="occupation" class="form-label">Their job/occupation</label>
                <input type="text" id="occupation" name="occupation" placeholder="e.g., software engineer, teacher" class="form-control">
              </div>
              
              <div class="col-md-6">
                <label for="age" class="form-label">Age</label>
                <input type="number" id="age" name="age" placeholder="e.g., 25" class="form-control">
              </div>
            </div>
            
            <div class="mb-3">
              <label for="hobbies" class="form-label">Hobbies/Interests</label>
              <input type="text" id="hobbies" name="hobbies" placeholder="e.g., photography, gardening, fitness" class="form-control">
            </div>
            
            <div class="mb-3">
              <label for="budget" class="form-label">Budget</label>
              <input type="text" id="budget" name="budget" placeholder="e.g., $50, $100" class="form-control">
            </div>
            
            <div class="d-grid gap-2">
              <button type="submit" class="btn btn-success btn-lg">
                <i class="bi bi-sparkles me-2"></i> Generate Gift Ideas
              </button>
            </div>
          </form>
          
          <!-- Loading Spinner -->
          <div id="gift-loading" class="alert alert-info d-none mt-4" role="alert">
            <div class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></div>
            <span>Generating personalized gift ideas...</span>
          </div>
          
          <!-- Error Message -->
          <div id="gift-error" class="alert alert-danger d-none mt-4" role="alert"></div>
          
          <!-- Results Section -->
          <div id="gift-results" class="d-none mt-4">
            <div class="alert alert-success mb-3">
              <h5 class="alert-heading mb-3">
                <i class="bi bi-check-circle me-2"></i> Suggested Gift Ideas
              </h5>
              <div id="ideas-content" class="ideas-content"></div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  document.getElementById('quick-gift-form').addEventListener('submit', async function(e) {
    e.preventDefault();
    
    const csrfToken = document.querySelector('meta[name="csrf-token"]').getAttribute('content');
    
    const formData = {
      likes: document.getElementById('likes').value,
      dislikes: document.getElementById('dislikes').value,
      occupation: document.getElementById('occupation').value,
      age: document.getElementById('age').value,
      hobbies: document.getElementById('hobbies').value,
      budget: document.getElementById('budget').value
    };
    
    const resultsDiv = document.getElementById('gift-results');
    const errorDiv = document.getElementById('gift-error');
    const loadingDiv = document.getElementById('gift-loading');
    const ideasContent = document.getElementById('ideas-content');
    
    resultsDiv.classList.add('d-none');
    errorDiv.classList.add('d-none');
    errorDiv.textContent = '';
    loadingDiv.classList.remove('d-none');
    
    console.log('Sending form data:', formData);
    
    try {
      const response = await fetch('<%= quick_gift_ideas_path %>', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
          'X-CSRF-Token': csrfToken,
          'Accept': 'application/json'
        },
        body: JSON.stringify(formData)
      });
      
      loadingDiv.classList.add('d-none');
      
      if (!response.ok) {
        const errorText = await response.text();
        console.error('Response error:', errorText);
        throw new Error(`HTTP error! status: ${response.status}`);
      }
      
      const data = await response.json();
      
      if (data.success) {
        // Split by numbers followed by period/dot (e.g., "1.", "2.", "3.") or by newlines
        let ideas = data.idea.split(/\n/).filter(idea => idea.trim());
        
        // If we got fewer than 3, try splitting by numbered lists
        if (ideas.length < 3) {
          ideas = data.idea.split(/^\d+\.\s+/m).filter(idea => idea.trim());
        }
        
        // Take only first 3 ideas
        ideas = ideas.slice(0, 3);
        
        // Clean up each idea and create HTML with columns
        const ideasHtml = ideas.map(idea => {
          const cleaned = idea.replace(/^\d+\.\s*/, '').trim();
          return cleaned ? `<div class="col-md-4"><div class="idea-card"><p class="lead text-white">${cleaned}</p></div></div>` : '';
        }).join('');
        
        ideasContent.innerHTML = `<div class="row g-3">${ideasHtml}</div>`;
        resultsDiv.classList.remove('d-none');
      } else {
        errorDiv.textContent = data.error || 'Failed to generate gift ideas. Please try again.';
        errorDiv.classList.remove('d-none');
      }
    } catch (error) {
      loadingDiv.classList.add('d-none');
      console.error('Error:', error);
      errorDiv.textContent = 'An error occurred: ' + error.message;
      errorDiv.classList.remove('d-none');
    }
  });
</script>

