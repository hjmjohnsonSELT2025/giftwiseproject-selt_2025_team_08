<div class="upcoming-events-section">
  <% if upcoming_events&.any? %>
    <div class="events-list">
      <% upcoming_events.each do |event| %>
        <div class="event-card mb-3 p-3 border-bottom">
          <div class="row align-items-center">
            <div class="col-auto">
              <div class="event-date-badge bg-primary text-white rounded p-2 text-center" style="min-width: 70px;">
                <div class="small"><%= event.start_at.strftime("%b").upcase %></div>
                <div class="h4 mb-0"><%= event.start_at.strftime("%d") %></div>
              </div>
            </div>
            <div class="col">
              <h3 class="fw-bold mb-2">
                <%= link_to event.name, event_path(event), class: "text-decoration-none text-white event-name-link" %>
              </h3>
              <p class="text-white-50 mb-0">
                <i class="bi bi-clock"></i> 
                <%= event.start_at.strftime("%I:%M %p") %> - <%= event.end_at.strftime("%I:%M %p") %>
                <% if event.location.present? %>
                  <i class="bi bi-geo-alt ms-3"></i> 
                  <%= event.location %>
                <% end %>
                <% if event.theme.present? %>
                  <i class="bi bi-palette ms-3"></i> 
                  <%= event.theme %>
                <% end %>
                <i class="bi bi-gift ms-3"></i>
                <span><%= event.gift_count %> Gifts</span>
              </p>
            </div>
            <div class="col-auto">
              <%= link_to "View", event_path(event), class: "btn btn-outline-solid btn-sm", style: "padding: 0.375rem 0.75rem;" %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="text-center py-5">
      <p class="text-white mt-3">No upcoming events this month</p>
      <%= link_to "Create your first event", new_event_path, class: "btn btn-primary mt-2" %>
    </div>
  <% end %>
</div>


