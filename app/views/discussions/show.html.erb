  }

  .own-message .message-body {
    background-color: #667eea;
  }

  .other-message .message-body {
    background-color: #444;
  }

  .message-content {
    margin: 0 0 0.5rem 0;
    color: #e5e5e5;
    word-wrap: break-word;
    line-height: 1.5;
  }

  .message-meta {
    margin: 0;
    font-size: 0.85rem;
    color: #e5e5e5;
  }

  .message-form {
    margin-top: 1.5rem;
  }

  .message-form form {
    background-color: #2a2a2a;
    padding: 1.5rem;
    border: 1px solid #444;
    border-radius: 8px;
  }

  .form-label-wrapper {
    display: flex;
    justify-content: space-between;
    margin-bottom: 0.5rem;
    align-items: center;
  }

  .form-label-wrapper label {
    font-weight: 600;
    color: #e5e5e5;
    margin: 0;
  }

  .char-count {
    font-size: 0.85rem;
    color: #999;
  }

  .form-group textarea {
    width: 100%;
    padding: 0.75rem;
    border: 1px solid #444;
    border-radius: 6px;
    background-color: #1a1a1a;
    color: #e5e5e5;
    font-family: inherit;
    font-size: 0.95rem;
    resize: vertical;
  }

  .form-group textarea::placeholder {
    color: #666;
  }

  .form-group textarea:focus {
    outline: none;
    border-color: #667eea;
    background-color: #1a1a1a;
    color: #e5e5e5;
    box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.1);
  }

