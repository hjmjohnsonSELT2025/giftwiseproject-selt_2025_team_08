  }

  .btn {
    padding: 0.5rem 1rem;
    border: 1px solid #667eea;
    background-color: transparent;
    color: #667eea;
    border-radius: 6px;
    cursor: pointer;
    font-size: 0.95rem;
    font-weight: 500;
    transition: all 0.3s ease;
  }

  .btn:hover:not(:disabled) {
    background-color: #667eea;
