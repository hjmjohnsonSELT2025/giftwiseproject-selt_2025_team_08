<div class="discussion-container" data-controller="discussion" data-discussion-event-id-value="<%= @event.id %>" data-discussion-thread-type-value="<%= @thread_type %>">
  <div class="discussion-header">
    <h1><%= @event.name %></h1>
        <%= link_to "Back to Event", event_path(@event)%>
    <h2><%= @thread_type == 'public' ? 'All Participants' : 'Contributors Only' %> Discussion</h2>
  </div>

  <div class="discussion-tabs">
    <%= link_to "All Participants", event_discussions_path(@event, thread_type: 'public'), 
        class: "discussion-tab #{@thread_type == 'public' ? 'active' : ''}" %>
    
    <% if @event.creator_id == current_user.id || @event.attendees.include?(current_user) %>
      <%= link_to "Contributors Only", event_discussions_path(@event, thread_type: 'contributors_only'), 
          class: "discussion-tab #{@thread_type == 'contributors_only' ? 'active' : ''}" %>
    <% end %>
  </div>

  <div class="messages-area" id="messages-container" data-discussion-target="messagesContainer">
    <% @messages.each do |message| %>
      <div class="message <%= message.user_id == current_user.id ? 'own-message' : 'other-message' %>" data-message-id="<%= message.id %>">
        <div class="message-body">
          <p class="message-content"><%= message.content %></p>
          <p class="message-meta">
            <%= message.user.first_name %> <%= message.user.last_name %> â€¢ 
            <span class="time-ago" data-timestamp="<%= message.created_at.to_i %>"><%= time_ago_in_words(message.created_at) %> ago</span>
          </p>
        </div>
      </div>
    <% end %>
  </div>

  <div class="message-form">
    <form data-discussion-target="form" action="<%= create_message_event_discussions_path(@event, thread_type: @thread_type) %>" method="post" data-turbo="false">
      <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
      <div class="form-group">
        <div class="form-label-wrapper">
          <label for="message-content">Message</label>
          <span id="char-count" class="char-count">0 / 5000</span>
        </div>
        <textarea id="message-content" name="discussion_message[content]" placeholder="Type your message..." required rows="3" maxlength="5000"></textarea>
      </div>
      <div class="form-actions">
        <button type="submit" class="btn btn-primary" id="submit-btn">Send Message</button>
      </div>
    </form>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const textarea = document.getElementById('message-content')
    const charCount = document.getElementById('char-count')
    const submitBtn = document.getElementById('submit-btn')
    const form = textarea.closest('form')
    const messagesArea = document.getElementById('messages-container')

    function scrollToBottom() {
      if (messagesArea) {
        setTimeout(() => {
          messagesArea.scrollTop = messagesArea.scrollHeight
        }, 0)
      }
    }

    function resetForm() {
      textarea.value = ''
      charCount.textContent = '0 / 5000'
      submitBtn.disabled = true
      submitBtn.textContent = 'Send Message'
    }

    function onMessageSent() {
      resetForm()
      scrollToBottom()
    }

    if (textarea) {
      textarea.addEventListener('input', function() {
        charCount.textContent = `${this.value.length} / 5000`
        submitBtn.disabled = this.value.trim().length === 0
        if (submitBtn.textContent !== 'Send Message') {
          submitBtn.textContent = 'Send Message'
        }
      })

      textarea.addEventListener('keydown', function(e) {
        if (e.key === 'Enter' && e.ctrlKey && !submitBtn.disabled) {
          form.dispatchEvent(new Event('submit'))
        }
      })
    }

    form.addEventListener('submit', function() {
      submitBtn.textContent = 'Sending...'
      submitBtn.disabled = true
    })

    window.addEventListener('message-sent', onMessageSent)

    scrollToBottom()
    submitBtn.disabled = true
  })
</script>

