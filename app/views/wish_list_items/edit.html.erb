<div class="home-container">
  <!-- Welcome Section -->
  <section class="welcome-section bg-gradient py-5 mb-5">
    <div class="container">
      <div class="row">
        <div class="col-lg-12">
          <h1 class="display-4 fw-bold text-white mb-3">
            <i class="bi bi-pencil-square"></i> Edit Item
          </h1>
          <p class="lead text-white-50 mb-4">Update your wish list item</p>
        </div>
      </div>
    </div>
  </section>

  <div class="container">
    <div class="row justify-content-center">
      <div class="col-lg-6">
        <div class="card shadow-sm border-0" style="background-color: #2a2a2a;">
          <div class="card-header" style="background-color: #667eea; border: none;">
            <h2 class="mb-0 text-white">Item Details</h2>
          </div>
          <div class="card-body" style="background-color: #2a2a2a; padding: 2rem;">
            <%= render "form", wish_list_item: @wish_list_item %>
            
            <div class="mt-3">
              <%= link_to "Back to Wish List", wish_list_items_path, class: "btn btn-outline-light w-100" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
