<header class="navbar navbar-expand-lg" style="background-color: #2a2a2a; border-bottom: 1px solid #444;">
  <div class="container-fluid">
    <a class="navbar-brand fw-bold" href="<%= root_path %>" style="color: #e5e5e5;">
      <i class="bi bi-gift"></i> GiftWise
    </a>
    
    <% if logged_in? %>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation" style="border-color: #e5e5e5; background-color: #444;">
        <span class="navbar-toggler-icon"></span>
      </button>
      
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav ms-auto gap-1 align-items-lg-center">
          <li class="nav-item d-lg-auto"><a href="<%= root_path %>" class="btn btn-outline-light btn-sm nav-link-close" style="padding: 0.375rem 0.5rem; margin-top: 0; white-space: nowrap;">Home</a></li>
          <li class="nav-item d-lg-auto"><a href="<%= contacts_path %>" class="btn btn-outline-light btn-sm nav-link-close" style="padding: 0.375rem 0.5rem; margin-top: 0; white-space: nowrap;">Contacts</a></li>
          <li class="nav-item d-lg-auto"><a href="<%= events_path %>" class="btn btn-outline-light btn-sm nav-link-close" style="padding: 0.375rem 0.5rem; margin-top: 0; white-space: nowrap;">Events</a></li>
          <li class="nav-item d-lg-auto"><a href="<%= wish_list_items_path %>" class="btn btn-outline-light btn-sm nav-link-close" style="padding: 0.375rem 0.5rem; margin-top: 0; white-space: nowrap;">Wish List</a></li>
          <li class="nav-item d-lg-auto"><a href="<%= settings_path %>" class="btn btn-outline-light btn-sm nav-link-close" style="padding: 0.375rem 0.5rem; margin-top: 0; white-space: nowrap;">Settings</a></li>
          <li class="nav-item d-lg-auto">
            <%= button_to "Logout", session_path, method: :delete, class: "btn btn-outline-danger btn-sm nav-link-close", style: "padding: 0.375rem 0.5rem; margin-top: 0; white-space: nowrap;" %>
          </li>
        </ul>
      </div>
    <% end %>
  </div>
</header>
