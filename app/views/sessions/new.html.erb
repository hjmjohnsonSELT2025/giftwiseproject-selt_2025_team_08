<h1>Log in</h1>

<%= form_with url: session_path, method: :post, local: true do |f| %>
  <div>
    <%= label_tag :email %><br />
    <%= text_field_tag :email, params[:email], required: true %>
  </div>

  <div>
    <%= label_tag :password %><br />
    <%= password_field_tag :password, nil, required: true %>
  </div>

  <div>
    <%= submit_tag "Log in" %>
  </div>
<% end %>

<p>
  Don't have an account? <%= link_to "Sign up", new_registration_path %>
</p>

<p>
  <%= link_to "Forgot your password?", new_password_reset_path %>
</p>
